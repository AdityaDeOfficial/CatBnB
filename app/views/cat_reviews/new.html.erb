<div class="container">
  <div class="row">
    <div class="col-xs-4">
        <%= simple_form_for [@cat, @cat_review], data: { controller: "submit" } do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience",
        input_html: { data: { controller: "star-rating", action: "click->form-submit#submit"} } %>
        <%# Uncomment when form_submit connect issue resolves %>
        <%# <%= f.submit "", class: "d-none" %>
        <%= f.submit "Send your review" %>
      <% end %>
    </div>
  </div>
</div>
