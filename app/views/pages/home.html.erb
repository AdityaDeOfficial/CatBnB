 <div class="main-container border border-primary pt-0 mt-0">
    <div class="cards">
      <% @cats.each do |cat| %>
        <div class="cat-card border border-primary my-0 bg-light">
          <div>
            <%= image_tag cat.photo_url, alt:"cat pic", height: 100 %>
          </div>
          <div>
            <h5><%= link_to cat.name, cat_path(cat) %></h5>
            <p>Lives at <%= cat.address %></p>
          </div>
        </div>
      <% end %>
    </div>

    <div class="card-category">
        <div data-controller="map"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
          data-map-markers-value="<%= @markers.to_json %>"
          style="width: 100%; height: 100%;">
        </div>
    </div>
